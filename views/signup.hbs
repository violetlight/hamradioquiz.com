<form action="/users/sign-up" method="post">
  <div>
    <label>E-mail:</label>
    <input type="email" name="email"/>
  </div>
  <div>
    <label>Username:</label>
    <input type="text" name="username"/>
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password"/>
  </div>
  <div>
    <input type="submit" value="Sign Up"/>
  </div>
</form>
